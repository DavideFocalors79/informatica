classe Contatto{
String Nome
String Cognome
String Telefono
Boolean Nascosto
Get Nome()
Get Cognome()
Get Telefono()
Get Nascosto()
Set Nome()
Set Cognome()
Set Telefono()
Set Nascosto()
}

classe Main{
Contatto[] Gestore
Metodo Menu{
Metodo leggiPersona () //vengono inserite le informazioni di un contatto per essere aggiunto o letto
Metodo Modifica () // su modifica ci saranno nel menu nascosto anche il cambio password e cambio di visualizzazione
Metodo Cerca()  //cerca tramite nome, e avra la funzione per andare nell'altro gestore
Metodo Eliminazione ()
Metodo Visualizza ()
Metodo AggiuntaSaldo ()
Metodo Telefona ()
}
}
